{
  "mappings": [
    {
      "priority": 1,
      "request": {
        "method": "GET",
        "urlPath": "/service/accounts",
        "headers": {
          "x-scenario": {
            "equalTo": "BAD_REQUEST-INPUT"
          }
        },
        "queryParameters": {
          "customerId": {
            "matches": "^[A-Za-z0-9]{1,10}$"
          }
        },
        "bodyPatterns": [
          {
            "absent": true
          }
        ]
      },
      "response": {
        "status": 400,
        "statusMessage": "BAD_REQUEST",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "The request is invalid."
      }
    }
  ]
}
